<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CalenderCustom">
        <attr name="color_text_title" format="reference|color" />
        <attr name="size_text_title" format="dimension" />

        <attr name="size_text_name_day" format="dimension" />
        <attr name="color_text_name_day" format="reference|color" />

        <attr name="size_text_day_calender" format="dimension" />
        <attr name="color_mark_day" format="reference|color" />
        <attr name="color_text_day_calender" format="reference|color" />
        <attr name="color_text_mark_day_calender" format="reference|color" />

        <attr name="theme_calender">
            <enum name="default_calender" value="1" />
            <enum name="calender_mark_color" value="2" />
            <enum name="detailed_calendar" value="3" />
        </attr>

        <attr name="start_week_calender">
            <enum name="mon" value="1" />
            <enum name="tue" value="2" />
            <enum name="wed" value="3" />
            <enum name="thu" value="4" />
            <enum name="fri" value="5" />
            <enum name="sat" value="6" />
            <enum name="sun" value="7" />
        </attr>

        <attr name="visibility_line_name_day">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>

        <attr name="visibility_button">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>

        <attr name="color_line_name_day" format="reference|color" />
        <attr name="size_line_name_day" format="dimension" />

<!--        <attr name="status_sat_sun_color_bar" format="boolean"/>-->

        <attr name="color_sat_sun_bar" format="color|reference" />


        <attr name="src_button_back" format="reference|color" />
        <attr name="src_button_next" format="reference|color" />
        <attr name="size_button_back" format="dimension" />
        <attr name="size_button_next" format="dimension" />

        <attr name="font_calender" format="string" />

        <attr name="gravity_text_date">
            <enum name="center" value="0" />
            <enum name="start" value="1" />
            <enum name="end" value="2" />
        </attr>

        <attr name="status_sat_sun_color_bar">
            <enum name="default_bar" value="0" />
            <enum name="top" value="1" />
            <enum name="close" value="2" />
        </attr>


        <attr name="open_mark" format="boolean" />
    </declare-styleable>
</resources>